{
  "name": "infinity-studio",
  "version": "2.0.0",
  "description": "InfinityStudio - Professional creative suite combining Premiere Pro, Photoshop, After Effects, and Lofi Studio capabilities. Create without limits.",
  "main": "index.js",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "build:macos": "tauri build --target aarch64-apple-darwin",
    "build:macos-intel": "tauri build --target x86_64-apple-darwin",
    "frontend:dev": "vite",
    "frontend:build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "setup": "node scripts/setup.js",
    "postinstall": "npm run setup"
  },
  "keywords": [
    "photo-editing",
    "video-editing",
    "animation",
    "motion-graphics",
    "after-effects",
    "cross-platform",
    "desktop-app",
    "premiere-pro",
    "photoshop",
    "lofi-studio",
    "streaming",
    "obs-integration",
    "tauri",
    "infinity-studio"
  ],
  "author": "InfinityStudio Team",
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "fabric": "^5.3.0",
    "konva": "^9.2.0",
    "react-konva": "^18.2.10",
    "wavesurfer.js": "^7.4.0",
    "tone": "^14.7.77",
    "ffmpeg-wasm": "^0.12.6",
    "@tensorflow/tfjs": "^4.14.0",
    "color": "^4.2.3",
    "chroma-js": "^2.4.2",
    "luxon": "^3.4.4",
    "zustand": "^4.4.7",
    "react-colorful": "^5.6.1",
    "react-split-pane": "^0.1.92",
    "react-dropzone": "^14.2.3",
    "uuid": "^9.0.1",
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "gl-matrix": "^3.4.3"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/color": "^3.0.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
