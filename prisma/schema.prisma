// Prisma Schema for AI Tech Blog Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Authentication & Users
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(READER)

  // Relationships
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  membership    Membership?
  preferences   UserPreferences?
  analytics     UserAnalytics[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([role])
}

enum UserRole {
  READER        // Regular user
  SUBSCRIBER    // Paid subscriber
  AUTHOR        // Can create content
  EDITOR        // Can approve content
  ADMIN         // Full access
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  theme           String   @default("system") // light, dark, system
  newsletterOptIn Boolean  @default(false)
  interests       String[] // Array of category IDs or tags

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// Content Management
// ============================================

model Post {
  id              String       @id @default(cuid())
  title           String
  slug            String       @unique
  excerpt         String?      @db.Text
  content         String       @db.Text
  coverImage      String?

  status          PostStatus   @default(DRAFT)
  contentType     ContentType  @default(ARTICLE)

  // AI Generation
  isAiGenerated   Boolean      @default(false)
  aiPromptId      String?
  aiPrompt        AIPrompt?    @relation(fields: [aiPromptId], references: [id])

  // SEO
  metaTitle       String?
  metaDescription String?      @db.Text
  keywords        String[]

  // Premium content
  isPremium       Boolean      @default(false)

  // Scheduling
  publishedAt     DateTime?
  scheduledFor    DateTime?

  // Author
  authorId        String?
  author          User?        @relation(fields: [authorId], references: [id])

  // Relationships
  categories      Category[]
  tags            Tag[]
  media           Media[]
  comments        Comment[]
  analytics       PostAnalytics[]
  affiliateLinks  AffiliateLink[]

  // Engagement
  viewCount       Int          @default(0)
  likeCount       Int          @default(0)
  shareCount      Int          @default(0)

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  lastRefreshedAt DateTime?

  @@index([slug])
  @@index([status])
  @@index([publishedAt])
  @@index([authorId])
  @@index([contentType])
}

enum PostStatus {
  DRAFT
  IN_REVIEW
  SCHEDULED
  PUBLISHED
  ARCHIVED
}

enum ContentType {
  ARTICLE
  REVIEW
  COMPARISON
  GUIDE
  NEWS
  AI_NEWS      // Dedicated AI and machine learning news
  ROUNDUP
  SPONSORED
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  image       String?
  color       String?  // For UI theming

  posts       Post[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique

  posts     Post[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Media {
  id          String    @id @default(cuid())
  url         String
  alt         String?
  caption     String?
  type        MediaType @default(IMAGE)
  source      String?   // unsplash, ai-generated, upload
  width       Int?
  height      Int?

  posts       Post[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([type])
}

enum MediaType {
  IMAGE
  VIDEO
  INFOGRAPHIC
  EMBED
}

// ============================================
// AI Content Generation
// ============================================

model AIPrompt {
  id          String       @id @default(cuid())
  name        String
  description String?      @db.Text
  prompt      String       @db.Text
  category    String?

  // Configuration
  model       String       @default("claude-3-5-sonnet-20241022")
  temperature Float        @default(0.7)
  maxTokens   Int          @default(4000)

  // Usage
  posts       Post[]
  tasks       ScheduledTask[]

  isActive    Boolean      @default(true)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([category])
  @@index([isActive])
}

model ScheduledTask {
  id            String         @id @default(cuid())
  name          String
  type          TaskType

  // Scheduling
  cronExpression String?       // For recurring tasks
  scheduledFor   DateTime?     // For one-time tasks
  lastRunAt      DateTime?
  nextRunAt      DateTime?

  // Configuration
  config        Json           // Task-specific configuration

  // AI Prompt
  aiPromptId    String?
  aiPrompt      AIPrompt?      @relation(fields: [aiPromptId], references: [id])

  status        TaskStatus     @default(PENDING)
  isActive      Boolean        @default(true)

  // Results
  lastResult    Json?
  errorMessage  String?        @db.Text

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([status])
  @@index([isActive])
  @@index([nextRunAt])
}

enum TaskType {
  GENERATE_POST
  REFRESH_CONTENT
  SEND_NEWSLETTER
  SOCIAL_SYNC
  ANALYTICS_REPORT
}

enum TaskStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

// ============================================
// Community & Engagement
// ============================================

model Comment {
  id        String        @id @default(cuid())
  content   String        @db.Text

  postId    String
  post      Post          @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User          @relation(fields: [authorId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    Comment?      @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[]     @relation("CommentReplies")

  status    CommentStatus @default(PENDING)

  upvotes   Int           @default(0)
  downvotes Int           @default(0)

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([postId])
  @@index([authorId])
  @@index([status])
}

enum CommentStatus {
  PENDING
  APPROVED
  SPAM
  REJECTED
}

model Newsletter {
  id            String   @id @default(cuid())
  email         String   @unique
  isSubscribed  Boolean  @default(true)
  interests     String[] // Categories they're interested in

  subscribedAt  DateTime @default(now())
  unsubscribedAt DateTime?

  @@index([isSubscribed])
}

// ============================================
// Monetization
// ============================================

model Membership {
  id              String           @id @default(cuid())
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  plan            MembershipPlan
  status          MembershipStatus @default(ACTIVE)

  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripePriceId          String?

  currentPeriodStart     DateTime?
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean  @default(false)

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([status])
}

enum MembershipPlan {
  FREE
  BASIC
  PREMIUM
  ENTERPRISE
}

enum MembershipStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
}

model AffiliateLink {
  id              String   @id @default(cuid())
  url             String
  trackingCode    String   @unique

  productName     String?
  productImage    String?
  price           String?

  provider        String   // amazon, bestbuy, etc.

  postId          String
  post            Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  clicks          Int      @default(0)
  conversions     Int      @default(0)
  revenue         Float    @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([postId])
  @@index([trackingCode])
}

model AdPlacement {
  id          String   @id @default(cuid())
  name        String
  location    String   // header, sidebar, in-content, footer

  adCode      String   @db.Text
  provider    String   // adsense, custom, etc.

  isActive    Boolean  @default(true)

  impressions Int      @default(0)
  clicks      Int      @default(0)
  revenue     Float    @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([location])
}

// ============================================
// Analytics
// ============================================

model PostAnalytics {
  id            String   @id @default(cuid())
  postId        String
  post          Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  date          DateTime @default(now())

  views         Int      @default(0)
  uniqueVisitors Int     @default(0)
  avgTimeOnPage Int      @default(0) // seconds
  bounceRate    Float    @default(0)

  // Traffic sources
  directTraffic    Int   @default(0)
  organicSearch    Int   @default(0)
  socialMedia      Int   @default(0)
  referral         Int   @default(0)

  createdAt     DateTime @default(now())

  @@unique([postId, date])
  @@index([postId])
  @@index([date])
}

model UserAnalytics {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  date      DateTime @default(now())

  pageViews Int      @default(0)
  sessions  Int      @default(0)

  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model SiteAnalytics {
  id              String   @id @default(cuid())
  date            DateTime @unique @default(now())

  totalPageViews  Int      @default(0)
  uniqueVisitors  Int      @default(0)
  totalSessions   Int      @default(0)

  // Engagement
  avgSessionDuration Int   @default(0) // seconds
  bounceRate         Float @default(0)

  // Revenue
  adRevenue          Float @default(0)
  affiliateRevenue   Float @default(0)
  subscriptionRevenue Float @default(0)

  createdAt       DateTime @default(now())

  @@index([date])
}
